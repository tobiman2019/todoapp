<h1>List of All Todos</h1>

<p>
  <%= link_to "Create a New Todo", new_todo_path %>
</p>

<table border = "1">
  <tr>
    <th>ID</th>
    <th>NAME</th>
    <th>DESCRIPTION</th>
  </tr>
  <% @todos.each do |todo| %>
  <tr>
    <td><%= todo.id %></td>
    <td><%= todo.name %></td>
    <td><%= todo.description %></td>
    <td><%= link_to "Edit", edit_todo_path(todo) %></td>
    <td><%= link_to "Show", todo_path(todo) %></td>
    <td><%= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure you want to delete this item"} %></td>
  </tr>
  
      
  <% end %>
    
</table>